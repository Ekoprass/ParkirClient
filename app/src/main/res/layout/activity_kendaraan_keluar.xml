<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ekoprass.parkirclient.EditParkiran"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:text="Nomor Karcis  "
            android:textSize="20sp"
            android:id="@+id/tvNoKarcis"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_marginVertical="5dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:text="Plat Nomor"
            android:textSize="20sp"
            android:id="@+id/tvPlanomor"
            android:textAlignment="center"
            android:layout_marginVertical="5dp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:text="Waktu Masuk"
            android:textSize="17sp"
            android:id="@+id/tvMasuk"
            android:textAlignment="center"
            android:layout_marginVertical="1dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:text="Waktu Keluar"
            android:textSize="17sp"
            android:id="@+id/tvKeluar"
            android:textAlignment="center"
            android:layout_marginVertical="1dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:text="Kode Tempat Parkir"
            android:textSize="17sp"
            android:id="@+id/tvKode"
            android:textAlignment="center"
            android:layout_marginVertical="1dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:text="Durasi"
            android:textSize="17sp"
            android:id="@+id/tvDurasi"
            android:textAlignment="center"
            android:layout_marginVertical="1dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:text="Biaya Parkir"
            android:textSize="20sp"
            android:id="@+id/tvBiaya"
            android:textAlignment="center"
            android:layout_marginVertical="10dp"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp">
        <Button
            android:id="@+id/btExit"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Keluar Parkiran"
            android:textColor="#fff"
            android:background="@color/colorPrimary"
            android:layout_marginRight="5dp"
            android:padding="3dp"/>
        <Button
            android:id="@+id/btBackGo"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_height="wrap_content"
            android:text="Kembali"
            android:textColor="#fff"
            android:background="@color/colorDanger"/>
    </LinearLayout>
</LinearLayout>